class Author {
    // Atributos privados
    private String name;
    private String email;
    private char gender;

    // Construtor
    public Author(String name, String email, char gender) {
        this.name = name;
        this.email = email;
        this.gender = gender;
    }

    // Métodos públicos
    public String getName() {
        return name;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public char getGender() {
        return gender;
    }

    // Método toString
    @Override
    public String toString() {
        return "Author[name=" + name + ",email=" + email + ",gender=" + gender + "]";
    }
}

public class Main {
    public static void main(String[] args) {
        // Testar construtor
        Author author = new Author("Giuliana Ferreira Chantal", "giuliana.f.chantal@gmail.com", 'm');
        
        // Verificar o método toString()
        System.out.println(author); // Deve imprimir os detalhes do autor
        
        // Testar o Setter
        author.setEmail("novoemail@exemplo.com");
        System.out.println("Email atualizado: " + author.getEmail());
        
        // Testar os Getters
        System.out.println("Nome: " + author.getName());
        System.out.println("Gênero: " + author.getGender());
    }
}
